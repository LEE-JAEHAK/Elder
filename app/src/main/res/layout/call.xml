<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_wave"
        android:scaleType="fitXY"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="94dp" />

    <ImageView
        android:id="@+id/main_iv_profile"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="29dp"
        android:src="@drawable/ic_certification_back_allow_b_30_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/main_iv_notice"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:src="@drawable/ic_top_notice_def_30_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_tv_top_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="돌보미분께"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/main_iv_profile"
        app:layout_constraintTop_toBottomOf="@+id/main_iv_profile" />

    <TextView
        android:id="@+id/main_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12sp"
        android:text="현재 상태로 연락하세요."
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/main_iv_profile"
        app:layout_constraintTop_toBottomOf="@+id/main_tv_top_1" />

    <ImageView
        android:id="@+id/call_iv_hospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        app:layout_constraintEnd_toStartOf="@+id/call_iv_sleep"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_hospital" />

    <ImageView
        android:id="@+id/call_iv_sleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/call_iv_hospital"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ico_sleep" />

    <ImageView
        android:id="@+id/call_iv_outdoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/call_iv_hungry"
        app:layout_constraintTop_toBottomOf="@+id/call_iv_hospital"
        app:layout_constraintVertical_bias="0.263"
        app:srcCompat="@drawable/icon_outdoor" />

    <ImageView
        android:id="@+id/call_iv_hungry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/call_iv_outdoor"
        app:layout_constraintTop_toBottomOf="@+id/call_iv_sleep"
        app:layout_constraintVertical_bias="0.263"
        app:srcCompat="@drawable/icon_hungry" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="아프다."
        android:textColor="@color/black"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/call_iv_hospital"
        app:layout_constraintStart_toStartOf="@+id/call_iv_hospital"
        app:layout_constraintTop_toBottomOf="@+id/call_iv_hospital" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="졸리다."
        android:textColor="@color/black"
        android:textSize="27sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/call_iv_sleep"
        app:layout_constraintStart_toStartOf="@+id/call_iv_sleep"
        app:layout_constraintTop_toBottomOf="@+id/call_iv_sleep" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="외출한다."
        android:textColor="@color/black"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/call_iv_outdoor"
        app:layout_constraintStart_toStartOf="@+id/call_iv_outdoor"
        app:layout_constraintTop_toBottomOf="@+id/call_iv_outdoor"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="배고프다."
        android:textColor="@color/black"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/call_iv_hungry"
        app:layout_constraintStart_toStartOf="@+id/call_iv_hungry"
        app:layout_constraintTop_toBottomOf="@+id/call_iv_hungry" />

    <ImageView
        android:id="@+id/call_ivbtn_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974"
        app:srcCompat="@drawable/banner_call" />


</androidx.constraintlayout.widget.ConstraintLayout>